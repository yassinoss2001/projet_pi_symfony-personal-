{% extends 'baseee.html.twig' %}

{% block title %}
    supplement Details - {{ supplement.nom }}
{% endblock %}

{% block stylesheets %}

    <style>
        .hero-content {
            background-color: #000; /* Light gray background */
            padding: 50px 0; /* Add some padding */
            text-align: center; /* Center align text */
        }

        .food-supplement-card {
            background-color: #ffffff; /* White background for the card */
            border-radius: 10px; /* Add rounded corners */
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1); /* Add a subtle shadow */
            overflow: hidden; /* Hide overflowing content */
            transition: transform 0.3s ease-in-out; /* Add smooth transition */
        }

        .food-supplement-card:hover {
            transform: scale(1.05); /* Scale up on hover */
        }

        .card-banner {
            padding: 30px; /* Add padding inside the card banner */
        }

        .card-banner h1 {
            font-size: 36px; /* Increase font size for the heading */
            margin-bottom: 20px; /* Add spacing below the heading */
            color: #333333; /* Set text color */
        }

        .card-banner p {
            font-size: 18px; /* Set font size for other text */
            margin-bottom: 10px; /* Add spacing below paragraphs */
            color: #666666; /* Set text color */
        }

        .card-footer {
            background-color: #f8f9fa; /* Light gray background for the footer */
            border-top: 1px solid #dee2e6; /* Add a border at the top of the footer */
            padding: 20px 0; /* Add some padding */
            width:50px;
        }

        .card-footer .btn {
            font-size: 18px; /* Increase font size for buttons */
        }
        .food-supplement{
            width:50%;
        }
        .article{
            width:50%   
        }
    </style>
{% endblock %}

{% block body %}
<section class="food-menu" id="food-menu">
    <div class="container">
       <div class="hero-content">
    <div class="row justify-content-center">
         <div class="col-md-8" style="align-items: center; margin-top: 10%;">
    <div class="food-menu-card" style="align-items: center; text-align: left; border-radius: 10px; box-shadow: 0 0 20px rgba(0, 0, 0, 0.1); overflow: hidden; transition: transform 0.3s ease-in-out; display: flex; position: relative;">
        <img src="{{ asset('uploads/images/' ~ supplement.image) }}" alt="{{ supplement.nom }}" class="img-fluid" style="max-width: 400px; border-top-left-radius: 10px; border-bottom-left-radius: 10px;">
   <a href="{{ path('app_supplement_like', {'id': supplement.id}) }}" style="position: absolute; bottom: 10px; left: 200px; font-size: 64px; color: inherit;">
     {% if likeExists %}
        <i class="fas fa-heart" style="color: red;"></i>
    {% else %}
        <i class="fas fa-heart" style="color: black;"></i>
    {% endif %}
</a>
                <div class="card-banner" style="padding: 30px; flex-grow: 1;">
                    <h1 style="font-size: 36px; margin-bottom: 10px;">{{ supplement.nom }}</h1>
                        
                    <div style="margin-bottom: 20px;">
                        <p style="font-size: 18px; color: #666; margin-bottom: 5px;"><strong>Prix:</p><p></strong> {{ supplement.prix }}</p>
                        
                    </div>
                      <div style="margin-bottom: 20px;">
                     <p style="font-size: 18px; color: #666; margin-bottom: 5px;"><strong>Code-QR:</strong></p>
                    <img src="\uploads\qrcode.png" alt="QR Code" style="width:150px;">
                  </div>
                  
                </div>
            </div>
              <div  style="width:150px; margin:10px auto;">
                        <a href="{{ path('app_controller_page_accueil') }}" class="btn btn-primary">Back to supplements</a>
            </div>
          
        </div>
    </div>
</div>

</div>
    
    </div>
</section>
{% endblock %}
