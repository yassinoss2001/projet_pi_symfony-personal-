{% extends 'backg.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
  .supplement-details-container {
    max-width: 80%;
    margin: 0 auto;
    padding: 20px;
    border: 1px solid #ccc;
    border-radius: 5px;
    background-color: #F9F6F0; /* New background color */
    margin-top: 20px;
    font-family: Arial, sans-serif;
}

.supplement-details-container h1 {
    text-align: center;
    margin-bottom: 20px;
    color: #343a40; /* Keep the existing color */
}

.supplement-details-table {
    width: 100%;
    border-collapse: collapse;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
    margin-bottom: 20px;
}

.supplement-details-table th, .supplement-details-table td {
    border: 1px solid #dee2e6;
    padding: 12px;
    text-align: left;
}

.supplement-details-table th {
    background-color: #31353D; /* Keep the existing color */
    font-weight: bold;
    color: #DDDDDD; /* Keep the existing color */
    text-align: left;
}

.supplement-details-table td {
    background-color: #FFFFFF; /* New background color */
    color: #495057; /* Keep the existing color */
}

.supplement-details-table tbody tr {
    border-bottom: 1px solid #dddddd;
}

.supplement-details-table tbody tr:nth-of-type(even) {
    background-color: #F9F6F0; /* New background color */
}

.supplement-details-table td img {
    max-width: 100%;
    height: auto;
}

.btn-container {
    text-align: center;
    margin-top: 20px;
}

.btn-container button {
    margin: 0 10px;
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

.btn-container button a {
    color: white;
    text-decoration: none;
}

.btn-back {
    background-color: #007bff; /* Keep the existing color */
}

.btn-edit {
    background-color: #28a745; /* Keep the existing color */
}

.btn-delete {
    background-color: #dc3545; /* Keep the existing color */
}

.btn-container button:hover {
    opacity: 0.8;
}

.btn a {
    color: white;
    text-decoration: none;
    margin-right: 10px;
    padding: 8px 16px;
    border-radius: 4px;
    transition: background-color 0.3s ease;
}

.btn:hover a {
    color: #fff;
}


    </style>
{% endblock %}

{% block title %}- New Supplement -{% endblock %}

{% block body %}
    <main>
        <article>
            <div class="supplement-details-container">
                <div class="row">
                    <div class="col-md-8 offset-md-2 menu-form">
                        <h1>- Create New Supplement -</h1>
{{ form_start(form, {'attr': {'class': 'supplement-form', 'name': 'supplementForm', 'enctype': 'multipart/form-data', 'novalidate': 'novalidate'}}) }}
                        <div class="form-group">
                            <label for="nom" class="menu-label">Nom</label>
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control menu-nom', 'placeholder' : 'Nom' }}) }}
                            {{ form_errors(form.nom,{'attr':{'class':'text-danger'}}) }}
                        </div>
                        <div class="form-group">
                            <label for="prix" class="menu-label">Prix</label>
                            {{ form_widget(form.prix, {'attr': {'class': 'form-control menu-prix', 'placeholder' : 'Prix' }}) }}
                            {{ form_errors(form.prix,{'attr':{'class':'text-danger'}}) }}
                        </div>

                        <div class="form-group">
                            <label for="image" class="menu-label">Image</label>
                            {{ form_widget(form.image, {'attr': {'class': 'form-control menu-image'}}) }}
                            {{ form_errors(form.image,{'attr':{'class':'text-danger'}}) }}
                        </div>
                        <div class="buttons">
                            <button type="submit" class="btn btn-danger">{{ button_label|default('Save') }}</button>
                            <a href="{{ path('app_supplement_index') }}" class="btn danger">Back to list</a>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </article>
    </main>
{% endblock %}
